							a.nav-link(href='#', role='button', aria-haspopup='true', aria-expanded='false') Контакты
						a.btn.btn-lg.btn-common(href='tel:88005504460')
							i.fa.fa-phone(aria-hidden='true')
							|Заказать звонок						
				// Form for navbar search area
				form.full-search
					.container
						input(type='text', placeholder='Type to Search')
						a.close-search(href='#')
							span.fa.fa-times.fa-2x
				// Search form ends
		// Navbar Ends
	// Main Carousel Section
	#carousel-area
		#carousel-slider.carousel.slide(data-ride='carousel')
