	// Header area starts
	section#header
		// Navbar Starts
		nav.navbar.navbar-light(data-spy='affix', data-offset-top='50')
			.container
				button.navbar-toggler.hidden-md-up.pull-xs-right(data-target='#main-menu', data-toggle='collapse', type='button')
					| ☰
				// Brand
				a.navbar-brand(href='#')
					img(src='img/logo.png', alt='')
				#main-menu.collapse.navbar-toggleable-sm.pull-xs-left.pull-md-right
					// Navbar Starts
					ul.nav.nav-inline
						li.nav-item.dropdown
							a.nav-link.active(href='#', role='button', aria-haspopup='true', aria-expanded='false') Готовые системы
						li.nav-item.dropdown
							a.nav-link(href='#', role='button', aria-haspopup='true', aria-expanded='false') Калькулятор
